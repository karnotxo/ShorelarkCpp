PROJECT_NAME           = "Shorelark C++"
PROJECT_NUMBER         = 1.0
PROJECT_BRIEF         = "C++ port of Shorelark simulation"

OUTPUT_DIRECTORY      = @CMAKE_CURRENT_BINARY_DIR@/docs
INPUT                = @CMAKE_CURRENT_SOURCE_DIR@/libs @CMAKE_CURRENT_SOURCE_DIR@/apps
RECURSIVE            = YES
EXTRACT_ALL          = YES
EXTRACT_PRIVATE      = YES
EXTRACT_STATIC       = YES

GENERATE_HTML        = YES
HTML_OUTPUT          = html
HTML_FILE_EXTENSION  = .html

GENERATE_LATEX       = NO

HAVE_DOT             = YES
UML_LOOK            = YES
CALL_GRAPH          = YES
CALLER_GRAPH        = YES

USE_MDFILE_AS_MAINPAGE = @CMAKE_CURRENT_SOURCE_DIR@/README.md

# Modern C++ settings
BUILTIN_STL_SUPPORT = YES
CPP_CLI_SUPPORT     = NO
SIP_SUPPORT         = NO
IDL_PROPERTY_SUPPORT = YES
DISTRIBUTE_GROUP_DOC = NO
GROUP_NESTED_COMPOUNDS = NO
SUBGROUPING         = YES
INLINE_GROUPED_CLASSES = NO
INLINE_SIMPLE_STRUCTS  = NO
TYPEDEF_HIDES_STRUCT  = NO
LOOKUP_CACHE_SIZE     = 0
NUM_PROC_THREADS      = 0

# Include all sources
FILE_PATTERNS        = *.cpp *.hpp *.h *.cc *.hh
EXTENSION_MAPPING    = hpp=C++ cpp=C++ h=C++ cc=C++ hh=C++ 